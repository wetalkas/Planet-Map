<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:clickable="true"
    android:longClickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_model_list_element_circle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@color/colorAccent"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_model_list_element_last_changed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_changed"
        android:textColor="@android:color/secondary_text_light"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/cv_model_list_element_circle"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_model_list_element_last_changed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="here date"
        android:textSize="12sp"
        android:layout_below="@+id/tv_model_list_element_last_changed"
        android:layout_toRightOf="@+id/cv_model_list_element_circle"
        android:layout_marginLeft="16dp"
        android:layout_alignRight="@id/tv_model_list_element_last_changed"/>

    <TextView
        android:id="@+id/tv_model_list_element_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planets count"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@android:color/secondary_text_light"
        android:layout_toRightOf="@+id/tv_model_list_element_last_changed"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/tv_model_list_element_last_count_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="here count"
        android:textSize="12sp"
        android:layout_below="@+id/tv_model_list_element_count"
        android:layout_alignLeft="@+id/tv_model_list_element_count"
        android:layout_alignRight="@id/tv_model_list_element_count"/>


    <TextView
        android:id="@+id/tv_model_list_element_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@android:color/secondary_text_light"
        android:layout_toRightOf="@+id/cv_model_list_element_circle"
        android:layout_alignTop="@+id/tv_model_list_element_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/tv_model_list_element_last_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="here description"
        android:textSize="12sp"
        android:lines="2"
        android:layout_below="@+id/tv_model_list_element_description"
        android:layout_toRightOf="@+id/cv_model_list_element_circle"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>


    <ImageView
        android:id="@+id/iv_model_list_element_subject"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_extension_black_36dp"
        android:layout_marginLeft="16dp"
        android:tint="@color/colorTitleOnWhiteBackground"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_model_list_element_name"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:text="Map name"
        android:textSize="13sp"
        android:lines="3"
        android:textStyle="bold"
        android:textColor="@android:color/primary_text_dark"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:layout_alignLeft="@+id/cv_model_list_element_circle"
        android:layout_alignStart="@+id/cv_model_list_element_circle"
        android:gravity="center"
        android:singleLine="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>


</RelativeLayout>