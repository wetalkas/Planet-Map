<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteBackground"
    android:clipChildren="false"
    tools:context="info.fandroid.mindmap.ui.fragment.ChildPlanetFragment"
    android:gravity="center">



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="790dp"
        android:layout_height="790dp"
        android:layout_marginLeft="-434dp"
        android:layout_marginTop="-434dp"
        app:civ_border_color="@android:color/secondary_text_light_nodisable"
        app:civ_border_width="1dp"
        android:src="@android:color/transparent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="608dp"
        android:layout_height="608dp"
        android:layout_marginLeft="-434dp"
        android:layout_marginTop="-434dp"

        android:id="@+id/parent_planet"



        android:src="@color/colorAccent" />

    <info.fandroid.mindmap.view.PlanetView
        android:id="@+id/child_planet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        app:circle_color="@color/colorAccent"
        tools:layout_width="135dp"
        tools:layout_height="135dp"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/tv_parent"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/primary_text_dark"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"

        />


</FrameLayout>
