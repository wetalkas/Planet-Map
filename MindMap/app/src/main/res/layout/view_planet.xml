<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false"


    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@android:color/transparent"
        app:civ_border_color="@android:color/secondary_text_light_nodisable"
        app:civ_border_width="1dp"


        tools:layout_height="270dp"
        tools:layout_width="270dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/planet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@android:color/transparent"




        tools:layout_height="270dp"
        tools:layout_width="270dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_planet_view_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@color/colorAccent"
        tools:layout_height="135dp"
        tools:layout_width="135dp" />

    <TextView
        android:id="@+id/tvPlanetViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/primary_text_dark"
        android:textStyle="bold"

        android:layout_alignBottom="@+id/cv_planet_view_circle"
        android:layout_alignLeft="@+id/cv_planet_view_circle"
        android:layout_alignRight="@+id/cv_planet_view_circle"
        android:layout_alignTop="@+id/cv_planet_view_circle"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="New"
        android:textSize="14sp" />


    <!--<Button
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark" />-->


</RelativeLayout>